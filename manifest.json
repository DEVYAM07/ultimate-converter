{
  "manifest_version": 3,
  "name": "Ultimate Converter: PDF & EPUB",
  "description": "Convert webpages to PDF or EPUB formats seamlessly.",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}